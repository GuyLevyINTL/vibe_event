{
  "name": "break-breaker-game",
  "version": "1.0.0",
  "description": "A classic brick-breaking web game built with HTML5 Canvas",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e",
    "serve": "http-server -p 8080",
    "dev": "http-server -p 8080 -o"
  },
  "keywords": [
    "game",
    "canvas",
    "javascript",
    "brick-breaker",
    "html5"
  ],
  "author": "GuyLevyINTL",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "canvas": "^2.11.2",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "jest-canvas-mock"
    ],
    "collectCoverageFrom": [
      "script.js",
      "!node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests/e2e/"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  }
}
